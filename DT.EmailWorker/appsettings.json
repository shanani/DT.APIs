{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=DT.EmailWorker;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "EmailWorker": {
    "ServiceName": "DT.EmailWorker",
    "PollingIntervalSeconds": 30,
    "ScheduledEmailCheckIntervalMinutes": 1,
    "StatusReportEmail": "",
    "AlertEmail": "",
    "WebhookUrl": ""
  },
  "SmtpSettings": {
    "Server": "smtp.gmail.com",
    "Port": 587,
    "UseSSL": false,
    "UseTLS": true,
    "Username": "your-email@gmail.com",
    "Password": "your-app-password",
    "SenderEmail": "your-email@gmail.com",
    "SenderName": "DT Email Worker",
    "TimeoutSeconds": 30,
    "MaxConcurrentConnections": 10,
    "EnableConnectionPooling": true,
    "ConnectionPoolTimeoutMinutes": 5,
    "ValidateSSLCertificate": true,
    "RetryAttempts": 3,
    "RetryDelaySeconds": 5,
    "EnableLogging": true
  },
  "ProcessingSettings": {
    "BatchSize": 50,
    "MaxConcurrentWorkers": 5,
    "MaxRetryAttempts": 3,
    "RetryDelayMinutes": 15,
    "MaxAttachmentSizeMB": 25,
    "ProcessingTimeoutMinutes": 10
  },
  "CleanupSettings": {
    "IsEnabled": true,
    "RetentionDays": 90,
    "CleanupIntervalHours": 24,
    "MaxRecordsPerCleanup": 1000,
    "AggressiveCleanupThresholdPercent": 85
  }
}