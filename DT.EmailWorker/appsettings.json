 {
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "DT.EmailWorker": "Information"
    }
  },

  "ConnectionStrings": {
    "EmailDbConn": "Server=.;Database=DT_EmailWorker;User Id=app_email_worker;Password=app_email_worker123;TrustServerCertificate=True;"
  },

  "EmailWorkerSettings": {
    "ServiceName": "DT.EmailWorker",
    "MaxConcurrentWorkers": 5,
    "BatchSize": 10,
    "ProcessingIntervalSeconds": 30,
    "MaxRetryAttempts": 3,
    "RetryDelayMinutes": 5,
    "HealthCheckIntervalMinutes": 5,
    "CleanupIntervalHours": 24,
    "EmailHistoryRetentionDays": 180,
    "LogRetentionDays": 30,
    "EnableScheduledEmails": true,
    "EnableAutoCleanup": true
  },

  "SmtpSettings": {
    "Server": "smtp.stcgroup.stc.com.sa",
    "Port": 25,
    "Username": null,
    "Password": null,
    "SenderEmail": "seadt@stc.com.sa",
    "SenderName": "SEA Digital Transformation Announcements",
    "UseSSL": false,
    "UseTLS": false,
    "TimeoutSeconds": 30
  },

  "ProcessingSettings": {
    "MaxAttachmentSizeMB": 25,
    "MaxEmailSizeMB": 50,
    "MaxRecipientsPerEmail": 100,
    "EnableTemplateProcessing": true,
    "EnableEmailValidation": true
  },

  "CleanupSettings": {
    "EnableAutoCleanup": true,
    "EmailHistoryRetentionDays": 180,
    "ProcessingLogRetentionDays": 30,
    "FailedEmailRetentionDays": 7,
    "ArchiveOldEmails": true,
    "ArchivePath": null
  },

  "HealthChecks": {
    "Enabled": true,
    "IntervalMinutes": 5,
    "DatabaseTimeoutSeconds": 30,
    "SmtpTimeoutSeconds": 10
  }
}